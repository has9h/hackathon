            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Title: North Korean soldier defects across the DMZ, South Korea says - NBCNews.com"/>
        <TextView
            android:id="@+id/publishedon1"
            android:textColor="@color/colorPrimaryDark"
